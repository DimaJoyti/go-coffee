# Go Coffee Epic UI - Environment Variables

# Environment Configuration
NODE_ENV=development
DEV_MODE=false

# Server Configuration  
PORT=8090
HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8090
NEXT_PUBLIC_WS_URL=ws://localhost:8090

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=go_coffee
DB_USER=go_coffee_user
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Bright Data MCP Configuration
BRIGHT_DATA_API_TOKEN=your_bright_data_token_here
BRIGHT_DATA_ZONE=your_zone_here
MCP_SERVER_URL=http://localhost:3001
BRIGHT_DATA_RATE_LIMIT=10
BRIGHT_DATA_CACHE_TTL=300

# External APIs
GEMINI_API_KEY=your_gemini_api_key
OLLAMA_BASE_URL=http://localhost:11434

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Production settings (change for production)
# GIN_MODE=release
# LOG_LEVEL=warn
# DEV_MODE=false
