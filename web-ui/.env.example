# Go Coffee Epic UI - Environment Variables

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8090
NEXT_PUBLIC_WS_URL=ws://localhost:8090

# Backend Configuration
PORT=8090
GIN_MODE=debug

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/go_coffee
REDIS_URL=redis://localhost:6379

# Bright Data Configuration (for web scraping)
BRIGHT_DATA_API_TOKEN=your_bright_data_token_here
BRIGHT_DATA_ZONE=your_zone_here

# External APIs
GEMINI_API_KEY=your_gemini_api_key
OLLAMA_BASE_URL=http://localhost:11434

# Security
JWT_SECRET=your_super_secret_jwt_key
ENCRYPTION_KEY=your_32_byte_encryption_key

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
