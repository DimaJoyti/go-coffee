# Epic Crypto Terminal - Environment Variables

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8090
NEXT_PUBLIC_WS_URL=ws://localhost:8090

# Application Configuration
NEXT_PUBLIC_APP_NAME="Epic Crypto Terminal"
NEXT_PUBLIC_APP_VERSION="2.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Professional cryptocurrency trading terminal"

# TradingView Integration (Optional)
NEXT_PUBLIC_TRADINGVIEW_API_KEY=your_tradingview_api_key_here

# External APIs (Optional)
NEXT_PUBLIC_COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info

# Security (Production)
# NEXT_PUBLIC_SECURE_COOKIES=true
# NEXT_PUBLIC_CSRF_PROTECTION=true
