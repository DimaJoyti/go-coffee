# AI Service Environment Configuration

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8083
WORKERS=1
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/developer_dao
REDIS_URL=redis://localhost:6379

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Model Configuration
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DEFAULT_LLM_MODEL=gpt-4
MAX_TOKENS=4096
TEMPERATURE=0.1

# Service URLs
BOUNTY_SERVICE_URL=http://localhost:8080
MARKETPLACE_SERVICE_URL=http://localhost:8081
METRICS_SERVICE_URL=http://localhost:8082

# External APIs
GITHUB_TOKEN=your_github_token_here
DEFILLAMA_API_URL=https://api.llama.fi
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Caching Configuration
CACHE_TTL=3600
EMBEDDING_CACHE_TTL=86400

# Processing Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
BATCH_SIZE=32

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8084

# Security
AI_SERVICE_API_KEY=your_ai_service_api_key_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Storage
MODEL_STORAGE_PATH=./models
DATA_STORAGE_PATH=./data
